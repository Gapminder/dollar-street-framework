{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": ".",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}
